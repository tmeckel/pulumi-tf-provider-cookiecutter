{
    "python.defaultInterpreterPath": ".venv/bin/python",
    "python.formatting.provider": "black",
    "[makefile]": {
        "editor.insertSpaces": false
    },
    "[python]": {
        "editor.wordBasedSuggestions": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "files.exclude": {
        "**/__pycache__": true,
        ".venv": true
    },
}
